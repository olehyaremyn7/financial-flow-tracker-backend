{
  "name": "financial-flow-tracker-backend",
  "version": "0.1.1",
  "description": "Back-end for the FinancialFlowTracker application",
  "author": "Oleh Yaremyn <oleh_yaremyn@ukr.net>",
  "license": "MIT",
  "type": "module",
  "main": "server/bin/server.js",
  "engines": {
    "node": "19.x",
    "npm": "9.x"
  },
  "scripts": {
    "ts:build": "rimraf server && tsc",
    "ts:watch": "tsc -w",
    "ts:typecheck": "tsc --noEmit",
    "start": "yarn ts:build && NODE_ENV=production node server/bin/server.js",
    "dev": "NODE_ENV=development nodemon",
    "test": "NODE_ENV=test jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "test:hook": "yarn test --silent",
    "e2e:run": "yarn ts:build && concurrently --kill-others \"NODE_ENV=test node server/bin/server.js\" \"playwright test\"",
    "e2e:ui": "yarn ts:build && concurrently --kill-others \"NODE_ENV=test node server/bin/server.js\" \"playwright test --ui\"",
    "e2e:hook": "yarn e2e:run",
    "lint": "eslint . --ext .ts",
    "lint:fix": "yarn lint --cache --fix",
    "lint:hook": "yarn lint:fix && yarn lint --quiet",
    "format": "prettier \"./**/*.{ts,md,json}\"",
    "format:check": "yarn format --ignore-unknown --check",
    "format:fix": "yarn format --write --ignore-unknown --cache",
    "format:hook": "yarn format:fix && yarn format --ignore-unknown --list-different",
    "lint:format:check": "yarn lint && yarn format",
    "lint:format:fix": "yarn lint:fix && yarn format:fix",
    "lint:format:hook": "yarn format:hook && yarn lint:hook",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "redis": "^4.6.8",
    "redis-om": "^0.4.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "sanitize-html": "^2.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsyringe": "^4.8.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.4",
    "@playwright/test": "^1.37.1",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.3",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.197",
    "@types/morgan": "^1.9.5",
    "@types/ms": "^0.7.31",
    "@types/node": "^20.5.9",
    "@types/pino": "^7.0.5",
    "@types/sanitize-html": "^2.9.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-playwright": "^0.16.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olehyaremyn7/financial-flow-tracker-backend.git"
  },
  "bugs": {
    "url": "https://github.com/olehyaremyn7/financial-flow-tracker-backend.git/issues"
  },
  "homepage": "https://github.com/olehyaremyn7/financial-flow-tracker-backend.git/#readme",
  "keywords": [
    "Node.js",
    "Express.js",
    "MongoDB",
    "Redis",
    "JWT",
    "Lodash",
    "REST API",
    "Auth",
    "TypeScript",
    "Jest",
    "Playwright",
    "Mongoose",
    "bcrypt",
    "Moment",
    "swagger",
    "eslint",
    "prettier",
    "husky",
    "yarn",
    "zod"
  ]
}
